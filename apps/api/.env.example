# Server Configuration
PORT=8080
ENV=development
ALLOWED_ORIGIN=http://localhost:5173

# Auth Configuration
# Generate TOTP secret: use Google Authenticator or any TOTP generator
AUTH_TOTP_SECRET=BASE32SECRETFROMGOOGLEAUTH
# Generate JWT secret: openssl rand -base64 32
AUTH_JWT_SECRET=some-long-random-string-at-least-32-chars

# MongoDB Configuration
# Local Docker: mongodb://localhost:27017/zack
# Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/zack
MONGODB_DATABASE=zack

# User Configuration
OWNER_USER_ID=your-user-id-here

