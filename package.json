{
  "name": "zack-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:web": "pnpm --filter @zack/web dev",
    "build:web": "pnpm --filter @zack/web build",
    "lint:web": "pnpm --filter @zack/web lint",
    "test:web": "pnpm --filter @zack/web test --if-present",
    "seed": "cd apps/api && go run cmd/seed/main.go",
    "reseed": "cd apps/api && CONFIRM_RESEED=yes go run cmd/reseed/main.go"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
